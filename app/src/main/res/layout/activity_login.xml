<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ace3c8"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.rkele.app.ui.login.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="80dp">


        <com.rkele.app.widget.CustomEditText
            android:id="@+id/tv_business_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_et_bg_white"
            android:drawableLeft="@mipmap/ic_re_account"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:hint="@string/input_business_name"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="湖北测试" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_et_bg_white"
            android:orientation="horizontal">

            <com.rkele.app.widget.CustomEditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:drawableLeft="@mipmap/ic_re_password"
                android:drawablePadding="5dp"
                android:hint="@string/input_business_psd"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="123456" />

            <CheckBox
                android:id="@+id/cb_hide_show"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@drawable/select_cb_pwd"
                android:paddingRight="10dp" />


        </LinearLayout>


        <Button
            android:id="@+id/email_sign_in_button"

            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_bg_blue"
            android:text="登陆"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <include
        android:id="@+id/include"
        layout="@layout/layout_top_bar"></include>

</LinearLayout>
